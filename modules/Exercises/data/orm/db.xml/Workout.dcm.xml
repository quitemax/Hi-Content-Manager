<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Workout" table="workout">
    <change-tracking-policy>DEFERRED_IMPLICIT</change-tracking-policy>
    <id name="workoutId" type="integer" column="workout_id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="date" type="datetime" column="date"/>
    <field name="caloriesBurned" type="integer" column="calories_burned"/>
    <field name="elapsedTime" type="time" column="elapsed_time"/>
    <lifecycle-callbacks/>
  </entity>
</doctrine-mapping>
